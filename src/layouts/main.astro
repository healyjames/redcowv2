---
import BaseLayout from "./base.astro";
import Navigation from "../components/MainNavigation.astro";
import MobileNavigation from "../components/client/MobileNavigation/index";
import Footer from "../components/Footer.astro";

const { content, transparentNavigation } = Astro.props;
---
<BaseLayout content={content}>
  <Navigation transparent={transparentNavigation} />
  <MobileNavigation transparent={transparentNavigation} client:load />
  <slot />
  <Footer />
</BaseLayout>
