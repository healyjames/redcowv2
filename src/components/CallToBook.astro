---
import { contact } from "@/assets/redcow/content/data";
---
<style>
  .call-to-book {
    text-align: center;
    margin-top: 0.5rem;
    border-bottom: 2px solid transparent;
    h2 {
      display: inline;
      font-size: 1.5rem;
      margin: 0 auto;
      strong {
        display: block;
      }
      &:hover {
        border-bottom: 2px solid var(--foreground);
      }
    }
  }

  @media (min-width: 768px) {
  .call-to-book h2 strong {
    display: inline;
  }
}
</style>
<section class="call-to-book">
  <div class="section-inner">
    <a href={`tel:${contact.phone}`}>
      <h2>Call to book: <strong>{contact.phoneFormatted}</strong></h2>
    </a>
  </div>
</section>