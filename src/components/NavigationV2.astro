---
import { Image } from "astro:assets";
import logoEmblem from "@brand/logo/emblem.svg";
---
<style>
  .logo-container {
      display: none;
    }

  @media (min-width: 768px) {
    .logo-container {
      display: block;
    }
  }

  .logo-image {
    margin-left: auto;
    margin-right: auto;
    margin-top: 0.25rem;
  }

  .main-nav {
    display: none;
  }

  .nav-list {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-left: auto;
    margin-right: auto;
    max-width: 64rem;
    padding: 1rem;
    text-transform: uppercase;
    font-size: 0.75rem;
  }

  .nav-logo {
    margin-left: 5rem;
    margin-right: 5rem;
  }

  .nav-item {
    color: var(--foreground);
    border-bottom: 1px solid transparent;
    width: 60px;
    text-align: center;
  }

  .nav-item:hover {
    color: var(--primary);
    border-bottom: 1px solid var(--primary);
  }

  @media (min-width: 768px) {
    .main-nav {
      display: block;
      margin-top: -170px;
    }
    .logo-image {
      position: relative;
      z-index: 10;
    }
  }
</style>
<div class="logo-container">
  <a href="/" aria-label="Homepage">
    <Image 
      src={logoEmblem} 
      alt="The Red Cow Nantwich Emblem"
      width="200"
      class="logo-image"
    />
  </a>
</div>

<nav aria-label="Main navigation" class="main-nav">
  <ul class="nav-list">
    <li class="nav-item"><a href="/dine">Dine</a></li>
    <li class="nav-item"><a href="/stay">Stay</a></li>
    <li class="nav-item nav-logo"></li>
    <li class="nav-item"><a href="/events">Events</a></li>
    <li class="nav-item"><a href="/contact">Contact</a></li>
  </ul>
</nav>
