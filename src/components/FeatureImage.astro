---
import { Picture } from 'astro:assets';
import featureImage from "../assets/redcow/images/feature-image.webp";

const { 
  imageAlt = "The Red Cow", 
  headingText = "The Red Cow" 
} = Astro.props;

interface Props {
  imageSrc?: string;
  imageAlt?: string;
  headingText?: string;
}
---

<section class="relative w-full h-screen md:h-[85vh]">
  <Picture
    src={featureImage}
    widths={[480, 768, 1080, 1920]}
    formats={['avif', 'webp']}
    sizes="100vw"
    alt={imageAlt}
    class="absolute inset-0 w-full h-full object-cover object-[75%_25%] md:object-center"
    loading="eager"
    decoding="async"
  />
  <div class="absolute inset-0 bg-black/60"></div>
  <div class="relative h-full flex items-center justify-center text-center px-4">
    <h1 class="text-white text-4xl sm:text-5xl md:text-6xl font-extrabold drop-shadow-lg">
      {headingText}
    </h1>
  </div>
</section>