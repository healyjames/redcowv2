---
import { Picture } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  image: ImageMetadata;
  title?: string;
  text?: string;
  alt?: string;
  links?: Array<{ text: string; href: string; }>;
}

const { image, title, text, alt = "", links = [] } = Astro.props;

---
<style>
  .feature-image {
    filter: brightness(0.5);
    width: 100%;
    height: 600px;
    object-fit: cover;
    object-position: center;
  }

  .feature-image-content {
    position: relative;
    padding: 0 2rem;
    bottom: 8rem;
    h1 {
      color: var(--background);
      font-size: 1.75rem;
      font-weight: normal;
      font-family: 'PrimaryFont';
      line-height: 2.5;
    }
    p {
      color: var(--background);
      line-height: 0;
    }
  }

  .feature-image-container {
    max-height: 75vh;
    overflow: hidden;
  }

  .feature-image-links {
    display: flex;
    gap: 0.5rem;
    flex-direction: row;
    flex-wrap: nowrap;
  }

  .feature-image-wrapper {
    margin-bottom: -6rem;
  }

  @media screen and (min-width: 768px) {
    .feature-image {
      height: auto;
      object-fit: unset;
      object-position: unset;
    }
    .feature-image-content {
      bottom: 10rem;
      h1 {
        font-size: 3rem;
        line-height: 2;
      }
    }
    .feature-image-btn {
      font-size: 1.2rem;
    }
  }
</style>
<div class="feature-image-wrapper">
  <div class="feature-image-container">
    <Picture
      src={image}
      widths={[768, 1080, 1920]}
      formats={['avif', 'webp']}
      alt={alt}
      loading="lazy"
      decoding="async"
      class="feature-image"
    />
  </div>
  <div class="feature-image-content">
    {title && (
      <h1>{title}</h1>
    )}
    {text && (
      <p>{text}</p>
    )}
    {links && links.length > 0 && (
      <div class="feature-image-links">
        {links.map(link => (
          <a
            href={link.href}
            class="btn btn-tertiary feature-image-btn"
            style={{ marginRight: '0.5rem' }}
          >
            {link.text}
          </a>
        ))}
      </div>
    )}
  </div>
</div>
