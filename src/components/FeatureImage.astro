---
import { Picture } from 'astro:assets';
import featureImage from "../assets/redcow/images/feature-image.webp";

const { 
  imageAlt = "The Red Cow", 
  headingText = "The Red Cow" 
} = Astro.props;

interface Props {
  imageSrc?: string;
  imageAlt?: string;
  headingText?: string;
}
---
<style>
  .hero-section {
    position: relative;
    width: 100%;
    height: 100vh;
  }

  @media (min-width: 768px) {
    .hero-section {
      height: 85vh;
    }
  }

  .hero-image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: 75% 25%;
  }

  @media (min-width: 768px) {
    .hero-image {
      object-position: center;
    }
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background-color: rgba(0, 0, 0, 0.6); 
  }

  .hero-content {
    position: relative;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding-left: 1rem;
    padding-right: 1rem;
  }

  .hero-heading {
    color: #FFFFFF;
    font-size: 2.25rem;
    line-height: 1.2;
  }

  @media (min-width: 640px) {
  .hero-heading {
    font-size: 3rem;
  }
}

@media (min-width: 768px) {
  .hero-heading {
    font-size: 3.75rem;
  }
}
</style>
<section class="hero-section">
  <Picture
    src={featureImage}
    widths={[480, 768, 1080, 1920]}
    formats={['avif', 'webp']}
    sizes="100vw"
    alt={imageAlt}
    class="hero-image"
    loading="eager"
    decoding="async"
  />
  <div class="hero-overlay"></div>
  <div class="hero-content">
    <h1 class="hero-heading">
      {headingText}
    </h1>
  </div>
</section>
