---
import { Image } from "astro:assets";
import logoEmblem from "../assets/redcow/logo/emblem.svg";
---
<style>
  .logo-container {
    display: none;
    position: absolute;
    left: 50%;
    transform: translateX(calc(-50% - 20px));
    margin-top: -70px;
    padding-top: 70px;
    text-align: center;
    border-bottom-left-radius: 50%;
    border-bottom-right-radius: 50%;
    z-index: 10;
  }

  @media (min-width: 768px) {
    .logo-container {
      display: block;
    }
  }

  .logo-image {
    margin-left: auto;
    margin-right: auto;
    margin-top: 0.25rem;
  }

  .main-nav {
    display: none;
  }

  @media (min-width: 768px) {
    .main-nav {
      display: block;
    }
  }

  .nav-list {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-left: auto;
    margin-right: auto;
    max-width: 64rem;
    padding: 1rem;
    text-transform: uppercase;
    font-size: 0.75rem;
  }

  .nav-logo {
    margin-left: 5rem;
    margin-right: 5rem;
  }

  .nav-item {
    color: var(--foreground);
    border-bottom: 1px solid transparent;
  }

  .nav-item:hover {
    color: var(--primary);
    border-bottom: 1px solid var(--primary);
  }

</style>
<div class="logo-container">
  <a href="/" aria-label="Homepage">
    <Image 
      src={logoEmblem} 
      alt="The Red Cow Nantwich Emblem"
      width="200"
      class="logo-image"
    />
  </a>
</div>

<nav aria-label="Main navigation" class="main-nav">
  <ul class="nav-list">
    <li class="nav-item"><a href="/dine">Dine</a></li>
    <li class="nav-item"><a href="/stay">Stay</a></li>
    <li class="nav-item nav-logo">Logo</li>
    <li class="nav-item"><a href="/events">Events</a></li>
    <li class="nav-item"><a href="/contact">Contact</a></li>
  </ul>
</nav>
