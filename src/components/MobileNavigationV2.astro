---
import { Image } from "astro:assets";
import logoEmblem from "@brand/logo/emblem.svg";
---
<style>
  .mobile-logo {
    position: absolute;
    z-index: 10;
    width: 100%;
  }

  .mobile-logo-image {
    display: block;
    margin-left: auto;
    margin-right: auto;
  }

  @media (min-width: 768px) {
    .mobile-logo {
      display: none;
    }
  }
</style>
<div class="mobile-logo">
  <a href="/" aria-label="Homepage">
    <Image 
      src={logoEmblem} 
      alt="The Red Cow Nantwich Emblem"
      width="160"
      class="mobile-logo-image"
    />
  </a>
</div>
