---
import { businessInfo } from "@brand/content";
---
<style>
  .about-section h2 {
    font-size: 1.5rem;
    font-weight: 700;
    margin-top: 2rem;
  }

  .about-section p {
    margin-top: 1rem;
  }

  .about-section img {
    margin-top: 1rem;
  }

  .about-image {
    filter: brightness(0.6);
    width: 100%;
    height: 600px;
    object-fit: cover;
    object-position: center;
  }
</style>
<section class="about-section">
  <div>
    <div class="section-inner">
      <h2>About {businessInfo.name}</h2>
      <p>{businessInfo.shortDescription}</p>
    </div>
  </div>
</section>