<style>
  .main-nav {
    display: none;
  }

  @media screen and (min-width: 768px) {
    .main-nav {
      display: block;
    }
  }

  .nav-list {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    margin-left: auto;
    margin-right: auto;
    max-width: 64rem;
    padding: 1rem;
    text-transform: uppercase;
    font-size: 0.75rem;
  }

  .nav-item {
    color: var(--foreground);
    border-bottom: 1px solid transparent;
    min-width: 3rem;
    text-align: center;
  }

  .nav-item:hover {
    color: var(--primary);
    border-bottom: 1px solid var(--primary);
  }

  .nav-logo {
    font-size: 2rem;
    margin: 0 1rem;
  }

  .nav-logo:hover {
    color: var(--primary);
  }

</style>

<nav aria-label="Main navigation" class="main-nav">
  <ul class="nav-list">
    <li class="nav-item"><a href="/dine">Dine</a></li>
    <li class="nav-item"><a href="/stay">Stay</a></li>
    <li class="nav-logo"><a href="/">The Red Cow</a></li>
    <li class="nav-item"><a href="/events">Events</a></li>
    <li class="nav-item"><a href="/contact">Contact</a></li>
  </ul>
</nav>
