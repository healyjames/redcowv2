<style>
  .opening-hours h2 {
    text-align: center;
  }

  .hours-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
    margin-top: 2.5rem;
  }

  .day {
    font-weight: 700;
  }

  @media (min-width: 768px) {
    .hours-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .hours-grid {
      grid-template-columns: repeat(4, 1fr);
      text-align: center;
    }
  }
</style>
<section class="opening-hours">
  <div class="section-inner">
    <h2>Opening Hours</h2>
    <div class="hours-grid">
      <div>
        <h4 class="day">Monday</h4>
        <p>Close</p>
      </div>
      <div>
        <h4 class="day">Tuesday to Friday</h4>
        <p>Midday - Late</p>
      </div>
      <div>
        <h4 class="day">Saturday</h4>
        <p>10am - Late</p>
      </div>
      <div>
        <h4 class="day">Sunday</h4>
        <p>10am - 4pm</p>
      </div>
    </div>
  </div>
</section>