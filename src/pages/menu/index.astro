---
import { Picture } from "astro:assets";
import MainLayout from "../../layouts/main.astro";
import Separator from "../../components/Separator.astro";
import { pageMetadata, menuContent } from "@/assets/redcow/content/data";
import menuImage from "@brand/images/menu-image.jpg";

import mainMenu from "@brand/menus/menu.pdf";
import sundayMenu from "@brand/menus/sunday-lunch-menu.pdf";
import wineMenu from "@brand/menus/wine-list.pdf";

---
<style>
  .menu-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-auto-rows: 1fr;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    a {
      width: 100%;
      height: 100%;
      padding: 0 1rem;
      border: 1px solid var(--secondary);
      display: flex;
      align-items: center;
      justify-self: center;
      text-align: center;
      &:hover {
        background-color: var(--secondary);
        color: var(--background);
      }
      p {
        font-family: 'SecondaryFont', sans-serif;
        width: 100%;
      }
    }
  }

  @media screen and (min-width: 480px) {
    .menu-container {
      grid-template-columns: 1fr 1fr;
    }
  }

  @media screen and (min-width: 768px) {
    .menu-heading h1 {
      text-align: center;
    }
  }

  .menu-disclaimer {
    text-align: center;
    font-size: 1.5rem;
  }

  .menu-image {
    filter: brightness(0.6);
    width: 100%;
    height: 600px;
    object-fit: cover;
    object-position: center;
  }
</style>
<MainLayout content={pageMetadata.menu}>
  <div class="page-container">
    <section class="menu-heading">
      <div class="section-inner">
        <div>
          <h1>{menuContent.heading}</h1>
          <p>{menuContent.description}</p>
        </div>
      </div>
    </section>
  </div>
  <div>
    <div class="feature-image-container">
      <Picture
        src={menuImage}
        widths={[768, 1080, 1920]}
        formats={['avif', 'webp']}
        alt={menuContent.imageAlt}
        loading="lazy"
        decoding="async"
        class="menu-image"
      />
    </div>
  </div>
  <section class="menu-disclaimer">
    <div class="section-inner">
      <p>{menuContent.disclaimer}</p>
    </div>
  </section>
  <Separator />
  <div class="page-container">
    <section class="menus">
      <div class="section-inner">
        <div class="menu-container">
          <a href={mainMenu}>
            <p>Lunch Menu</p>
          </a>
          <a href={mainMenu}>
            <p>Evening Menu</p>
          </a>
          <a href={sundayMenu}>
            <p>Sunday Menu</p>
          </a>
          <a href={wineMenu}>
            <p>Wine Menu</p>
          </a>
        </div>
      </div>
    </section>
    <div>
  </div>
</MainLayout>
