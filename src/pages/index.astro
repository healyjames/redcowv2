---
import HomeLayout from "../layouts/home.astro";
import FeatureImage from "../components/FeatureImage.astro";
import Separator from "../components/Separator.astro";
import AboutSection from "../components/AboutSection.astro";
import TwoImageSection from "../components/TwoImageSection.astro";
import OpeningHours from "../components/OpeningHours.astro";
---
<style>
  .page-content {
    padding: 2rem 1rem;
    max-width: 64rem;
    margin-left: auto;
    margin-right: auto;
  }
</style>
<HomeLayout content={{ title: "Home" }}>
  <FeatureImage
    imageAlt="A placeholder feature image"
    headingText="The Red Cow"
  />
  <div class="page-content">
    <AboutSection />
    <Separator />
    <TwoImageSection />
    <Separator />
    <OpeningHours />
  </div>
</HomeLayout>
