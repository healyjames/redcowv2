---
import { Picture } from "astro:assets";
import aboutImage from "../../assets/redcow/images/about-section-image-1.jpg";
import MainLayout from "../../layouts/main.astro";

---
<style>
  .rooms-hero-image {
    filter: brightness(0.6);
  }
  .rooms-hero-content {
    position: absolute;
    top: 10rem;
    width: 100%;
    text-align: center;
    color: var(--background);
    h1 {
      font-family: 'PrimaryFont';
      color: var(--background);
      font-size: 3.5rem;
      font-weight: normal;
    }
  }
  .rooms-hero-container {
    max-height: 75vh;
    overflow: hidden;
  }
  @media (min-width: 1000px) {
    .rooms-hero-content {
      top: 12rem;
    }
  }
</style>
<MainLayout content={{ title: "Rooms" }} transparentNavigation={true}>
  <div class="rooms-hero-container">
    <Picture
      src={aboutImage}
      widths={[480, 768, 1080, 1920]}
      formats={['avif', 'webp']}
      alt={""}
      loading="lazy"
      decoding="async"
      class="rooms-hero-image"
    />
  </div>
  <div class="rooms-hero-content">
    <h1>Rooms</h1>
    <p>At The Red Cow</p>
  </div>
  <div class="page-container">
    <section class="rooms">
      <div class="section-inner">
        <p>Hello World!</p>
      </div>
    </section>
  </div>
</MainLayout>
