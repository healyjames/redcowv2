---
import { Picture } from "astro:assets";
import roomsImage from "../../assets/redcow/images/about-section-image-1.jpg";
import MainLayout from "../../layouts/main.astro";

---
<style>
  .rooms-hero-image {
    filter: brightness(0.6);
    width: 100%;
    height: 600px;
    object-fit: cover;
    object-position: center;
  }

  @media screen (min-width: 768px) {
    .rooms-hero-image {
      height: auto;
      object-fit: unset;
      object-position: unset;
    }
  }

  .rooms-hero-content {
    position: absolute;
    top: 12rem;
    width: 100%;
    text-align: center;
    color: var(--background);
    h1 {
      font-family: 'PrimaryFont';
      color: var(--background);
      font-size: 3.5rem;
      font-weight: normal;
    }
  }

  .rooms-hero-container {
    max-height: 75vh;
    overflow: hidden;
  }
</style>
<MainLayout content={{ title: "Rooms" }} transparentNavigation={true}>
  <div class="rooms-hero-container">
    <Picture
      src={roomsImage}
      widths={[768, 1080, 1920]}
      formats={['avif', 'webp']}
      alt={""}
      loading="lazy"
      decoding="async"
      class="rooms-hero-image"
    />
  </div>
  <div class="rooms-hero-content">
    <h1>Rooms</h1>
    <p>At The Red Cow</p>
  </div>
  <div class="page-container">
    <section class="rooms">
      <div class="section-inner">
        <p>We have four stunning en-suite B&B rooms available for our guests at the Red Cow. They have been named & designed around the theme of “Red Cow” breeds across the world.</p>
      </div>
    </section>
  </div>
</MainLayout>
