---
import MainLayout from "../../../layouts/main.astro";
import Separator from "../../../components/Separator.astro";
---
<style>
  .form-group {
    margin-bottom: 1rem;
    display: flex;
    flex-direction: column;
  }

  label {
    font-weight: 600;
    margin-bottom: 0.25rem;
    font-family: 'SecondaryFont';
  }

  input, select {
    padding: 0.5rem;
    border: 1px solid var(--secondary-lighter);
  }

  input:focus, select:focus {
    outline: 2px solid var(--primary);
    outline-offset: 2px;
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    border: 0;
  }

  @media screen and (min-width: 768px) {
    form {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 0.5rem 1rem; /* row-gap column-gap */
      align-items: start;
    }

    /* Make the submit button span both columns */
    form button {
      grid-column: 1 / -1;
      justify-self: start;
    }
  }
</style>

<MainLayout content={{ title: "Book" }}>
  <div class="page-container">
    <section class="booking-heading">
      <div class="section-inner">
        <h1>Book a room</h1>
        <p>Complete the form below to arrange your visit to The Red Cow.</p>
        <p><strong>Please note:</strong> Your reservation is not confirmed until you receive a confirmation email.</p>
      </div>
      <Separator />
    </section>
    
    <section class="booking-form">
      <div class="section-inner">
        <form aria-labelledby="bookingFormTitle" novalidate>
          <h2 id="bookingFormTitle" class="sr-only">Booking Form</h2>

          <div class="form-group">
            <label for="firstname">First Name <span aria-hidden="true">*</span></label>
            <input id="firstname" name="firstname" type="text" autocomplete="given-name" required />
          </div>

          <div class="form-group">
            <label for="surname">Surname <span aria-hidden="true">*</span></label>
            <input id="surname" name="surname" type="text" autocomplete="family-name" required />
          </div>

          <div class="form-group">
            <label for="guests">Number of guests</label>
            <select id="guests" name="guests">
              <option value="">Select number of guests</option>
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>
              <option value="6">6</option>
              <option value="7">7</option>
              <option value="8">8</option>
              <option value="9">9</option>
              <option value="10+">10+</option>
            </select>
          </div>

          <div class="form-group">
            <label for="date">Date<span aria-hidden="true">*</span></label>
            <input id="date" name="date" type="date" required />
          </div>

          <div class="form-group">
            <label for="room">Room preference</label>
            <select id="room" name="room">
              <option value="">Select a room</option>
              <option value="Any">Any</option>
              <option value="Red Angus">Red Angus</option>
              <option value="Limousin">Limousin</option>
              <option value="Corriente">Corriente</option>
              <option value="Ankole-Watusi">Ankole-Watusi</option>
            </select>
          </div>

          <div class="form-group">
            <label for="nights">Number of nights</label>
            <select id="nights" name="nights">
              <option value="">Select nights</option>
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>
              <option value="6">6</option>
              <option value="7">7</option>
              <option value="8+">8+</option>
            </select>
          </div>

          <div class="form-group">
            <label for="number">Contact Number</label>
            <input id="number" name="number" type="tel" inputmode="tel" autocomplete="tel" />
          </div>

          <div class="form-group">
            <label for="email">Email Address <span aria-hidden="true">*</span></label>
            <input id="email" name="email" type="email" autocomplete="email" required />
          </div>

          <button type="submit" class="button-secondary">Submit Booking</button>
        </form>
      </div>
    </section>
  </div>
</MainLayout>